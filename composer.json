{
    "name": "persist/core",
    "type": "library",
    "description": "Service based DB abstraction layer",
    "keywords": ["database", "db"],
    "license": "MIT",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "https://jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/persist/issues",
        "source": "https://github.com/jasny/persist"
    },
    "require": {
        "php": ">=7.4.0",
        "improved/iterable": "~0.1",
        "improved/type": "~0.1",
        "jasny/dotkey": "dev-master as 2.1",
        "jasny/immutable": "^2.0",
        "jasny/php-functions": "^4.1",
        "psr/log": "^1.1",
        "spatie/regex": "^1.4"
    },
    "require-dev": {
        "jasny/php-code-quality": "2.6.*"
    },
    "autoload": {
        "psr-4": {
            "Persist\\": "src/"
        },
        "files": [
            "src/Option/functions.php",
            "src/Update/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Persist\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpstan analyse",
            "phpunit --testdox --colors=always",
            "phpcs -p src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
