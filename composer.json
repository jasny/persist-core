{
    "name": "jasny/db",
    "type": "library",
    "description": "Adds modern OOP DB patterns by extending PHP extensions",
    "keywords": ["database", "db"],
    "license": "MIT",
    "homepage": "http://jasny.github.com/db",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/db/issues",
        "source": "https://github.com/jasny/db"
    },
    "require": {
        "php": ">=7.1.0",
        "doctrine/inflector": "master-dev as v2.0.0",
        "psr/container": "^1.0",
        "jasny/entity": "dev-master as v1.0.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\DB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\DB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs -p src",
            "phpstan analyse"
        ],
        "post-create-project-cmd": [
            "bash init.sh && rm init.sh"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
